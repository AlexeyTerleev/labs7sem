

def processNode(node) {
    idAttr = node.getAttribute("id")
    if idAttr and node.name == "item" {
        print("Processing node with id:", idAttr)
    }
}


def processXML(xmlString) {
    xmlDoc = parseXML(xmlString)                              
    root = xmlDoc.root
    nodes = root.children()                             

    for node in nodes {
        name = node.name
        if name == "item" {
            processNode(node)
        }
        else {
            continue
        }
    }
}

def main() {
    xmlString = read()

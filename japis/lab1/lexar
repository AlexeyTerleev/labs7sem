lexer grammar XMLLang;

ID      :   [a-zA-Z_][a-zA-Z_0-9]* ;
STRING  :   '"' (~["\\] | '\\' .)* '"' ;
COMMENT : '#' ~[\r\n]* -> skip ;
EQ      :   '=' ;
COMMA   :   ',' ;
LPAREN  :   '(' ;
RPAREN  :   ')' ;
COLON   :   ':' ;
WS      :   [ \t\r\n]+ -> skip ;

INDENT : 'INDENT' ; // Псевдотокен для отступов
DEDENT : 'DEDENT' ; // Псевдотокен для отступов